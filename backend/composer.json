{
  "name": "syntaxtrust/profile-website",
  "description": "Profile Syntaxtrust - Academic Web Development Services",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Syntaxtrust Team",
      "email": "hello@syntaxtrust.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*",
    "ext-mysqli": "*",
    "phpmailer/phpmailer": "^6.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php database/setup.php"
    ],
    "post-update-cmd": [
      "php database/setup.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
